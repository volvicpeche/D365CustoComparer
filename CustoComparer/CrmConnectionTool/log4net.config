<configuration>
  <log4net>
    <!-- Appender pour écrire dans un fichier CSV -->
    <appender name="CsvFileAppender" type="log4net.Appender.FileAppender">
      <file value="C:\Logs\logs.csv" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="Date;Niveau;Entity;Type;Message;Error" />
        <conversionPattern value="%date;%level;%property{Entity};%property{Type};%message;%error;%newline" />
      </layout>
    </appender>

    <!-- Logger racine -->
    <root>
      <level value="ALL" />
      <appender-ref ref="CsvFileAppender" />
    </root>
  </log4net>
</configuration>
